# Example values for prod environment. Do NOT commit real secrets.

project_id                = "family-recipe-prod"
region                    = "us-east1"
state_bucket_name         = "family-recipe-tf-state-prod"
terraform_admin_sa_id     = "terraform-admin"
app_sql_client_sa_id      = "app-sql-client"
db_instance_name          = "family-recipe-prod"
db_name                   = "family_recipe_prod"
db_user                   = "family_app"
db_password               = "REPLACE_ME"
db_password_secret_id     = "family-recipe-prod-db-password"
tier                      = "db-custom-1-3840"
disk_size_gb              = 20
backup_retention_days     = 7  # PG log retention max is 7
maintenance_window_day    = 7  # Sunday (GCP expects 1-7; Sunday=7)
maintenance_window_hour   = 5  # 05:00 UTC
pitr_enabled              = true
create_db_password_secret = true
grant_secret_accessor_to_app = false
enable_public_ip          = true  # start with public IP; switch to private/PSC later
authorized_networks       = []
ssl_mode                  = "ENCRYPTED_ONLY"

# Cloud Run / CI/CD
runtime_sa_id              = "family-recipe-runner"
deployer_sa_id             = "family-recipe-deployer"
artifact_registry_repo_id  = "family-recipe-prod"
cloud_run_service_name     = "family-recipe-prod"
min_instance_count         = 1
max_instance_count         = 5
uploads_bucket_name        = "family-recipe-prod-uploads"
uploads_base_url           = "https://storage.googleapis.com/family-recipe-prod-uploads"
prisma_schema              = "prisma/schema.postgres.prisma"
database_url_secret_id     = "family-recipe-prod-database-url"
jwt_secret_id              = "family-recipe-prod-jwt-secret"
family_master_key_secret_id = "family-recipe-prod-family-master-key"
wif_pool_id                = "github-pool"
wif_provider_id            = "github-provider"
github_repository          = "wnorowskie/family-recipe"
github_ref                 = "refs/heads/main"
